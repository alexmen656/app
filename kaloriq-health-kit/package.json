{
  "name": "kaloriq-health-kit",
  "version": "0.0.1",
  "description": "HealthKit integration plugin for Kaloriq calorie tracking app",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Alex Polan",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^2.4.7",
    "@capacitor/core": "^2.4.7",
    "@capacitor/ios": "^2.4.7",
    "@ionic/prettier-config": "^1.0.0",
    "@ionic/swiftlint-config": "^1.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.21.0",
    "swiftlint": "^1.0.1",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^2.4.7"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "KaloriqHealthKit.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "healthkit",
    "nutrition",
    "calories"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexmen656/kaloriq-health-kit.git"
  }
}
